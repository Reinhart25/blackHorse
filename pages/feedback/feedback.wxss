page {
  background-color: #eeeeee;
}
.fb_main {
  color: #666;
  padding: 15rpx;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
  --bothMargin: 12rpx;
}
.fb_main .fb_tips text {
  width: 27%;
  padding: 10rpx;
  margin-top: 20rpx;
  margin-left: var(--bothMargin);
  margin-right: var(--bothMargin);
  text-align: center;
  background-color: #fff;
  font-size: 26rpx;
}
.fb_main .fb_content {
  background-color: #fff;
  margin-top: 30rpx;
  width: 99%;
}
.fb_main .fb_content textarea {
  padding: 10rpx;
  width: 100%;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx ;
}
.fb_main .fb_content .fb_tool button {
  height: var(--buttonWh);
  width: var(--buttonWh);
  font-size: 60rpx;
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
  color: #8f7c89;
  background-color: #666;
}
.fb_main .fb_content .fb_tool .up_img {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.fb_main .from_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .from_btn_wrap button {
  margin: 0;
  padding: 20rpx 25rpx;
  width: 30%;
  background-color: var(--themeColor);
  display: flex;
  justify-content: center;
  align-items: center;
}
.fb_main .from_btn_wrap button text {
  color: #fff;
  margin-left: 10rpx;
}
